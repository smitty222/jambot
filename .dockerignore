# syntax=docker/dockerfile:1
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy dependency definitions
COPY package*.json ./

# Install dependencies (omit dev in production)
RUN npm ci --omit=dev

# Copy application source
COPY . .

# (Optional) Debug: list contents of src/database to verify dbUserManager.js is present
RUN echo "Contents of /app/src/database:" \
    && ls -R /app/src/database

# Expose the application port
EXPOSE 3000

# Start the application
CMD ["npm", "start"]
